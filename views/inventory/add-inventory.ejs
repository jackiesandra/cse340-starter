<h1><%= title %></h1>

<% if (messages) { %>
  <%- messages() %>
<% } %>

<form class="inventory-form" action="/inv/add-inventory" method="POST">
  <div class="form-row">
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input
        id="inv_make"
        name="inv_make"
        type="text"
        required
        minlength="2"
        maxlength="30"
        pattern="^[A-Za-z0-9\\s\\-']+$"
        title="Letters, numbers, spaces, hyphen, apostrophe only."
        value="<%= inv_make || '' %>"
      />
    </div>

    <div class="form-group">
      <label for="inv_model">Model</label>
      <input
        id="inv_model"
        name="inv_model"
        type="text"
        required
        minlength="1"
        maxlength="30"
        pattern="^[A-Za-z0-9\\s\\-']+$"
        title="Letters, numbers, spaces, hyphen, apostrophe only."
        value="<%= inv_model || '' %>"
      />
    </div>

    <div class="form-group">
      <label for="inv_year">Year</label>
      <input
        id="inv_year"
        name="inv_year"
        type="number"
        required
        min="1900"
        max="2099"
        value="<%= inv_year || '' %>"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group form-group--full">
      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
        minlength="10"
      ><%= inv_description || '' %></textarea>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="inv_image">Image path</label>
      <input
        id="inv_image"
        name="inv_image"
        type="text"
        required
        value="<%= inv_image || '/images/vehicles/no-image.png' %>"
      />
    </div>

    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail path</label>
      <input
        id="inv_thumbnail"
        name="inv_thumbnail"
        type="text"
        required
        value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="inv_price">Price</label>
      <input
        id="inv_price"
        name="inv_price"
        type="number"
        step="0.01"
        required
        min="0"
        value="<%= inv_price || '' %>"
      />
    </div>

    <div class="form-group">
      <label for="inv_miles">Miles</label>
      <input
        id="inv_miles"
        name="inv_miles"
        type="number"
        required
        min="0"
        value="<%= inv_miles || '' %>"
      />
    </div>

    <div class="form-group">
      <label for="inv_color">Color</label>
      <input
        id="inv_color"
        name="inv_color"
        type="text"
        required
        minlength="3"
        maxlength="20"
        pattern="^[A-Za-z\\s\\-]+$"
        title="Letters, spaces, hyphen only."
        value="<%= inv_color || '' %>"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="classificationList">Classification</label>
      <%- classificationList %>
    </div>
  </div>

  <button type="submit">Add Inventory</button>
</form>
