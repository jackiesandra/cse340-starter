<div class="login-page">
  <h1><%= title %></h1>

  <%- messages() %>

  <% if (errors && errors.length) { %>
    <ul class="notice">
      <% errors.forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/account/login" method="post" novalidate>
    <label for="email">Email Address:</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      value="<%= email || '' %>"
    >

    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      required
    >

    <p class="password-help">
      Passwords must be minimum of 12 characters and include
      1 capital letter, 1 number and 1 special character.
    </p>

    <div class="form-actions">
      <button type="button" id="showPassword">Show Password</button>
      <button type="submit">Login</button>
    </div>

    <p class="signup">
      No account? <a href="/account/register">Sign-up</a>
    </p>
  </form>
</div>

<script src="/js/account.js"></script>
