<%
// views/account/management.ejs
// Espera recibir: title, accountData
%>

<h1><%= title %></h1>

<%- messages() %>

<% if (accountData && accountData.account_type === "Client") { %>
  <p class="welcome">Welcome <%= accountData.first_name %></p>
<% } else if (accountData) { %>
  <h2>Welcome <%= accountData.first_name %></h2>
<% } %>

<p>
  <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
</p>

<% if (accountData && (accountData.account_type === "Admin" || accountData.account_type === "Employee")) { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Manage Inventory</a></p>
<% } %>
